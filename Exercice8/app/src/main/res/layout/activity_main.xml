<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.guillaume.exercice8.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="235dp">

            <TextView
                android:text="INFORMATIONS"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18dp"
                android:id="@+id/titleInfo"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:text="Nom"
                android:layout_width="match_parent"
                android:id="@+id/name"
                android:layout_height="40dp" />

            <TextView
                android:text="Prenom"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/surname" />

            <TextView
                android:text="Numero"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/phone" />

            <Button
                android:text="Modifier Infos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/infosButton"
                android:onClick="modifyInfos"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
            android:text="COORDONNEES"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:id="@+id/titleCoord"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:text="Numero maison"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/StreetNumber" />

            <TextView
                android:text="Adresse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/address" />

            <TextView
                android:text="Code Postal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/codePostal" />

            <TextView
                android:text="Ville"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/city" />

            <Button
                android:text="Modifier CoordonnÃ©es"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/coordButton"
                android:onClick="modifyCoord"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
